@model KendoProjectDemo.Models.DataModel.Employees

@using (Ajax.BeginForm("CreateEmployee", "Employee", null,
        new AjaxOptions { HttpMethod = "POST", OnSuccess = "handleSuccess" }))
{

    <h4>Add an Employee</h4>

    <div class="row mb-2">
        <div class="col-md-2">
            @Html.LabelFor(model => Model.FirstName)
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(model => Model.FirstName)
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-2">
            @Html.LabelFor(model => Model.LastName)
        </div>

        <div class="col-md-10">
            @Html.TextBoxFor(model => Model.LastName)
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-2">
            @Html.LabelFor(model => Model.DateOfBirth)
        </div>

        <div class="col-md-10">
            @Html.TextBoxFor(model => Model.DateOfBirth, new { type = "date" })
        </div>
    </div>

    <input type="submit" value="Submit">
}
