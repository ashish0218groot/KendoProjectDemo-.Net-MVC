@model KendoProjectDemo.Models.DataModel.Order

@using (Ajax.BeginForm("CreateOrder", "Order", null,
        new AjaxOptions { HttpMethod = "POST", OnSuccess = "handleSuccess" }))
{
    <h4> Create an Order </h4>

    <div class="row mb-2">
        <div class="col-md-3">
            @Html.LabelFor(model => Model.OrderNumber)
        </div>

        <div class="col-md-9">
            @Html.TextBoxFor(model => Model.OrderNumber)
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-3">
            @Html.LabelFor(model => Model.TotalAmount)
        </div>

        <div class="col-md-9">
            @Html.TextBoxFor(model => Model.TotalAmount)
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-3">
            @Html.LabelFor(model => Model.OrderDate)
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(model => Model.OrderDate, new { type = "date" })
        </div>
    </div>

    <input type="submit" id="addOrderButton" value="Submit">
}
